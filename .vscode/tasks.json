{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Auth Server",
      "type": "shell",
      "command": "uv run uvicorn app.main:app --reload --port 5001",
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": ["/c"]
        },
        "cwd": "${workspaceFolder}/auth-server"
      },
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "Run Frontend",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": ["/c"]
        },
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": [],
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run Caddy Gateway",
      "type": "shell",
      "command": "caddyserver.exe run --config \"${workspaceFolder}/utils/caddy.json\"",
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": ["/c"]
        }
        // NOTE: If caddy is not in your PATH, you must use the full path, e.g.,
        // "command": "C:\\Windows\\caddyserver.exe run --config ${workspaceFolder}/utils/nginx-gateway/caddy.json"
      },
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Run Resource Server",
      "type": "shell",
      "command": "uv run uvicorn app.main:app --reload --port 5002",
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": ["/c"]
        },
        "cwd": "${workspaceFolder}/resource-server"
      },
      "problemMatcher": [],
      "isBackground": true
    }
  ]
}
