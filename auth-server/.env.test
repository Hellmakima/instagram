# Environment for automated tests
AUTH_SERVER_LOG_DIR=auth-server/tests/tests_logs

# Database settings (use a separate test DB)
MONGODB_URI=mongodb://localhost:27017/instagram_auth_test
MONGODB_DBNAME=instagram_auth_test
USER_COLLECTION=users_test
REFRESH_TOKEN_COLLECTION=refresh_tokens_test

# JWT settings
## Access token
ACCESS_TOKEN_JWT_ALGORITHM=RS256
ACCESS_TOKEN_PUBLIC_JWT_SECRET_KEY="-----BEGIN PUBLIC KEY-----\nTEST_PUBLIC_KEY\n-----END PUBLIC KEY-----"
ACCESS_TOKEN_PRIVATE_JWT_SECRET_KEY="-----BEGIN PRIVATE KEY-----\nTEST_PRIVATE_KEY\n-----END PRIVATE KEY-----"
ACCESS_TOKEN_EXPIRE_MINUTES=1

## Refresh token
REFRESH_TOKEN_JWT_ALGORITHM=HS256
REFRESH_TOKEN_JWT_SECRET_KEY=test_refresh_secret
REFRESH_TOKEN_EXPIRE_DAYS=1

## CSRF settings
CSRF_SECRET_KEY=test_csrf_secret

# Email settings
EMAIL_VERIFICATION_TOKEN_JWT_ALGORITHM=HS256
EMAIL_VERIFICATION_TOKEN_SECRET_KEY=test_email_secret
EMAIL_VERIFICATION_TOKEN_EXPIRE_MINUTES=1
EMAIL_VERIFICATION_URL=http://localhost:5001/v1/email/verify-email

# SMTP settings (mock)
EMAIL_SERVICE_API_KEY=test-api-key
SMTP_USER=test@mail.com
SMTP_APP_PASS=testpass
SMTP_HOST=localhost
SMTP_PORT=1025

# Redis settings (use a different db index)
REDIS_URL=redis://localhost:6379/1

EMAIL_BACKEND=test
